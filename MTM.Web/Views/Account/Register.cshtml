@model MTM.Entities.DTO.UserViewModel
@{
	ViewData["Title"] = "Register";
}

<div class="auth-container mt-5 col-12 col-md-4 mx-auto ">
	<h2>Register</h2>
	<partial name="_Notify" />
	<form class="row" asp-action="Register" method="post" id="registerFrm">
		<div class="col-md-12 mt-3">
			<div class="form-floating">
				<input type="text" class="form-control" id="firstName" name="FirstName" placeholder="First Name">
				<label for="firstName">First Name</label>
			</div>
			<span asp-validation-for="FirstName" class="text-danger input-err"></span>
		</div>
		<div class="col-md-12 mt-3">
			<div class="form-floating">
				<input type="text" class="form-control" id="lastName" name="LastName" placeholder="Last Name">
				<label for="lastName" >Last Name</label>
			</div>
			<span asp-validation-for="LastName" class="text-danger input-err"></span>
		</div>
		<div class="col-md-12 mt-3">
			<div class="form-floating">
				<input type="email" class="form-control" id="email" name="Email" placeholder="Email">
				<label for="email">Email</label>
			</div>
			<span asp-validation-for="Email" class="text-danger input-err"></span>
		</div>
		<div class="col-md-12 mt-3">
			<div class="form-floating">
				<input type="password" class="form-control" id="password" name="PasswordHash" placeholder="Password">
				<label for="password" >Password</label>
				<span class="eye-icon" data-toggle="#password">👁️</span>
			</div>
			<span asp-validation-for="PasswordHash" class="text-danger input-err"></span>
		</div>
		<div class="col-md-12 mt-3">
			<div class="form-floating">	
				<input type="password" class="form-control" id="confirmPassword" name="PasswordConfirm"  placeholder="Confirm Password">
				<label for="confirmPassword" >Confirm Password</label>
				<span class="eye-icon" data-toggle="#confirmPassword">👁️</span>
			</div>
			<span asp-validation-for="PasswordConfirm" class="text-danger input-err"></span>
		</div>
		<div class="text-md-center mx-auto mt-3">
			<button type="submit" class="btn btn-primary w-100" asp-action="Register" asp-controller="Account">Sign Up</button>
		</div>
		<div class="text-md-center mx-auto mt-2">
			Already have an account ? <a asp-action="Login" asp-controller="Account" class="text-primary text-decoration-none fw-bolder"> Login </a>
		</div>
	</form>
</div>