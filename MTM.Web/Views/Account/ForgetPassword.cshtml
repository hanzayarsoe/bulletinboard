<div class="col-12 col-md-4 mx-auto mt-5">
    <div class="password-container">
        <h2 class="mb-4">Forgot Password</h2>
        <partial name="_Notify" />
        <form method="post" asp-action="ForgetPassword" asp-controller="Account">
            <div class="form-floating mb-3">
                <input type="email"
                       class="form-control"
                       id="email"
                       name="email"
                       placeholder="Email"
                       tabindex="1"
                       required />
                <label for="Email">Email</label>
            </div>
            <div class="text-md-center">
                <button type="button" tabindex="2" onclick="location.href='@Url.Action("Login","Account")'" class="btn btn-outline-danger col-md-4">Cancel</button>
                <button type="submit" tabindex="3" class="btn btn-outline-success col-md-4">Reset</button>
            </div>
        </form>
    </div>
</div>