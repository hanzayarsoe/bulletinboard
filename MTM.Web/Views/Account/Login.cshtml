@model MTM.Entities.DTO.UserViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="auth-container mt-5 col-12 col-md-4 mx-auto ">
	<h2>Login</h2>
	<partial name="_Notify" class="text-danger"/>
	<form asp-action="Login" method="post" id="loginFrm">
		<div class="mt-3">
			<div class="form-floating">
				<input asp-for="Email" type="text" class="form-control" id="userEmail" name="Email" placeholder="Email">
				<label asp-for="Email" for="lastName">Email</label>
			</div>
			<span asp-validation-for="Email" class="text-danger input-err"></span>
		</div>
		<div class="mt-3 ">
			<div class="form-floating">
				<input asp-for="PasswordHash" type="password" class="form-control" id="password" name="PasswordHash" placeholder="Password">
				<label asp-for="PasswordHash" for="password">Password</label>
				<span class="eye-icon" data-toggle="#password">👁️</span>
			</div>
			<span asp-validation-for="PasswordHash" class="text-danger input-err"></span>
		</div>
		<div class="mt-1 text-end">
			 <a asp-action="ForgetPassword" asp-controller="Account" class="text-secondary">Forgot Password</a>
		</div>
		<div class="text-md-center mx-auto mt-2">
			<button type="submit" class="btn btn-primary w-100" asp-action="Login" asp-controller="Account">Login</button>
		</div>
		<div class="text-md-center mx-auto mt-2">
			Don't have an account ? <a asp-action="Register" asp-controller="Account" class="text-primary text-decoration-none fw-bolder"> Register</a>
		</div>
	</form>
</div>