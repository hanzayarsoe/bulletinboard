
@model MTM.Entities.DTO.PostViewModel
@{
    ViewData["Title"] = "Post Edit";
}
<div class="container mt-5 col-md-7 mx-auto">
    <h2>Edit Post</h2>
    <partial name="_Notify" />
    <form method="post" asp-action="Edit" asp-controller="Post">
        <div class="form-floating mb-3">
             <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Title" required tabindex="1">
             <label asp-for="Title">Title</label>
             <span asp-validation-for="Title" class="text-danger input-err"></span>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="Description" class="form-control auto-resize-input" id="description" placeholder="Description" required rows="2" tabindex="2"> </textarea>
             <label asp-for="Description">Description</label>
             <span asp-validation-for="Description" class="text-danger input-err"></span>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="IsPublished" class="form-check-input" type="checkbox" role="switch" id="is-publish" name="IsPublished" checked="@Model.IsPublished">
            <label class="form-check-label" for="is-publish">Published?</label>
        </div>
        <div class="text-md-center">
            <button type="button" onclick="location.href='@Url.Action("index","Post")'" class="btn btn-outline-danger col-md-2" tabindex="4">Cancel</button>
            <button type="submit" class="btn btn-outline-success col-md-2" tabindex="3">Edit</button>
        </div>

    </form>
</div>

