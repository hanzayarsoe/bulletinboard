@model MTM.Entities.DTO.UserViewModel

<div class="container mt-5">
    <partial name="_Notify" />
    <div class="row">
        <div class="col-md-4 d-flex flex-column">
            <img src="/img/user_profile.png"
                 class="rounded-circle border mb-3 align-self-center w-75"
                 alt="User Image" />
            <a type="button" tabindex="9" asp-action="ChangePassword" asp-controller="User" class="btn btn-outline-info align-self-center btn-sm">
                Change Password
            </a>
        </div>
        <div class="col-md-6">
            <form method="post" asp-action="UserProfile" asp-controller="User">
                <div class="row mb-2">
                    <div class="col">
                        <input type="hidden" tabindex="1" name="Id" value="@Model.Id" />
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text"
                               class="form-control form-control-sm"
                               id="firstName"
                               name="FirstName"
                               asp-for="FirstName"
                               required/>
                        <span asp-validation-for="FirstName" class="text-danger input-err"></span>
                    </div>
                    <div class="col">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text"
                               tabindex="2"
                               class="form-control form-control-sm"
                               id="lastName"
                               name="LastName"
                               asp-for="LastName"/>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger input-err"></span>
                </div>
                <div class="mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email"
                           tabindex="3"
                           class="form-control form-control-sm"
                           id="email"
                           name="Email"
                           asp-for="Email"
                           required/>
                    <span asp-validation-for="Email" class="text-danger input-err"></span>
                </div>
                <div class="mb-2">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="number" tabindex="4" class="form-control form-control-sm" id="phoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger input-err"></span>
                <div class="mb-2">
                    <label for="dob" class="form-label">DOB</label>
                    <input type="date" tabindex="5" class="form-control form-control-sm" name="DOB" id="dob" />
                </div>
                <span asp-validation-for="DOB" class="text-danger input-err"></span>
                <div class="mb-4">
                    <label for="address" class="form-label">Address</label>
                    <textarea tabindex ="6" class="form-control form-control-sm" id="address" name="Address" rows="2">@Model.Address</textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <a tabindex="7" href="javascript:history.go(-1)"
                            class="btn btn-outline-danger col-md-4 mx-2 btn-sm">
                        Cancel
                    </a>
                    <button type="submit" tabindex="8"
                            class="btn btn-outline-success col-md-4 mx-2 btn-sm">
                        Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>