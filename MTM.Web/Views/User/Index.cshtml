@model IEnumerable<MTM.Entities.DTO.UserViewModel>;

@{
    ViewData["Title"] = "User List";
    int index = 1;
}

<div class="container">
    <h2>User List</h2>
    <div class="btn-container">
        <a class="btn btn-primary" asp-action="Create" asp-controller="User" > Create New User </a>
        <button  class="btn btn-success" data-bs-toggle="modal" data-bs-target="#import-modal"> Import </button>
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#export-modal">Export</button>
    </div>
    <table class="table table-striped" id="userTable">
    <thead>
        <tr class="tbl-cell-center">
            <th>No</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created Date</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
     @foreach (var item in Model)
        {
        <tr class="tbl-cell-center">
            <td>@index</td>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>
                <span class="badge @(item.Role == 1 ? "bg-primary" : "bg-success")">@item.RoleName</span>
            </td>
            <td class="dayjs" data-type="dmy" data-datetime="@item.CreatedDate">@item.CreatedDate</td>
            <td>@item.CreatedFullName</td>
            <td>
               <div class="dropdown">
                 <button class="btn btn-secondary dropdown-toggle" type="button" id="actionDropDown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   Action
                 </button>
                 <div class="dropdown-menu" aria-labelledby="actionDropDown">
                   <button class="dropdown-item text-success view-detail" data-id="@item.Id">View</button>
                   <a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.Id" asp-controller="User">Edit</a>
                   <button class="dropdown-item text-danger btn-delete" data-id="@item.Id">Delete</button>
                 </div>
                </div>
            </td>
        </tr>
        index++;
        }
    </tbody>
        <!-- Import Modal -->
        <div class="modal fade" id="import-modal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="importModalLabel">Import Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" id="uploadForm">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Default file input example</label>
                                <input class="form-control" type="file" id="formFile" accept=".xls, .xlsx">
                                <div class="form-text text-danger mt-1">* Allowed file types: xlsx, xls.</div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</table>

    <!--Detail Modal -->
    <div class="modal fade" id="detail-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">User Detail</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                     <table class="table">
                         <tr>
                             <th>Full Name</th>
                             <td id="d-full-name"></td>
                         </tr>
                        <tr>
                            <th>Role</th>
                            <td>
                                <span id="d-role" class="badge"></span>
                            </td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td id="d-email"></td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td id="d-phone"></td>
                        </tr>
                        <tr>
                            <th>Date Of Birth</th>
                            <td id="d-dob" class="dayjs" data-type="dmy" data-datetime=""></td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td id="d-address"></td>
                        </tr>
                          <tr>
                             <th>Created Date</th>
                            <td id="d-created-date" class="dayjs" data-type="dmy" data-datetime=""></td>
                         </tr>
                        <tr>
                            <th>Created By</th>
                            <td id="d-created-by"></td>
                        </tr>
                     </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


